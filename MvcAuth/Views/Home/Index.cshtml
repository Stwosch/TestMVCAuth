@model IEnumerable<MvcAuth.Models.Lists>
@{
    ViewBag.Title = "Index";
}

<h2>@User.Identity.Name's List</h2>

@Html.ValidationSummary(true)

@using (Html.BeginForm())
{
    <div>
        <label>
            Enter new item:
            <input name="new_item">
        </label>
    </div>
    <div>
        <label>
            Public post?
            <input type="checkbox" name="check_public">
        </label>
    </div>
    <div>
        <button type="submit">Add item</button>
    </div>
}

<table class="table table-bordered table-condensed">
    <thead>
        <tr>
            <th>Id</th>
            <th>Details</th>
            <th>Time - Date posted</th>
            <th>Time - Date edited</th>
            <th>Edit</th>
            <th>Delete</th>
            <th>Public post</th>
        </tr>  
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Details</td>
                <td>@item.Time_Posted - @item.Date_Posted</td>
                <td>@item.Time_Edited - @item.Date_Edited</td>
                <td>
                    <a href="@Url.Action("Edit", "Home")/@item.Id">Edit</a>
                </td>
                <td>
                    <a href="@Url.Action("Delete", "Home")/@item.Id">Delete</a>
                </td>
                <td>@item.Public</td>
            </tr>
        }
    </tbody>
</table>